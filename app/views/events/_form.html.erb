<body>
  <%= form_for([current_user, @event]) do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :street %>
      <%= form.text_field :street %>
    </div>
    <div>
      <%= form.label :zip_code %>
      <%= form.text_field :zip_code %>
    </div>
    <div>
      <%= form.label :occurs_at, "Date" %>
      <%= form.datetime_select :occurs_at, :start_year => Time.now.year, :ampm => true,
          :order => [:month, :day, :year, :hour, :minute], :minute_step => 15  %>
    </div>
    <div>
      <%= form.label :summary, "Summary" %>
      <%= form.text_area :summary, :rows => '10' %>
    </div>
    <div>
      <%= form.label :highlights, "Highlights" %>
      <%= form.text_area :highlights , :rows => '5' %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</body>
